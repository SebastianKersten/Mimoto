<div class="MimotoCMS_modules_ListItem" {{ realtime|default('') }}>

    <div class="MimotoCMS_modules_ListItem-content">

        <div class="MimotoCMS_modules_ListItem-info">
            <div class="MimotoCMS_modules_ListItem-label" {{ label_realtime|default('') }}>{{ label|default('') }}</div>
            {% if sublabel is defined %}
            <div class="MimotoCMS_modules_ListItem-sublabel" {% if sublabel_realtime is defined %}{{ sublabel_realtime }}{% endif %}>{{ sublabel }}</div>
            {% endif %}
        </div>
        <div class="MimotoCMS_modules_ListItem-menu">
            {% if button2_label is defined and button2_label is not empty %}
                {{ Mimoto.module('MimotoCMS_modules_Button', { label:button2_label|default(''), link:button2_link|default(''), onclick:button2_action|default(''), directive:button2_directive|default(''), types:[button2_type|default('')], icon:button2_icon|default('') }) }}
            {% endif %}
            {{ Mimoto.module('MimotoCMS_modules_Button', { label:button_label|default(''), link:button_link|default(''), onclick:button_action|default(''), directive:button_directive|default(''), types:[button_type|default('')], icon:button_icon|default('') }) }}
        </div>
        {% if (sortable is not defined or sortable is defined and sortable != false) %}
            {{ Mimoto.module('MimotoCMS_modules_SortHandle') }}
        {% endif %}
    </div>

</div>
