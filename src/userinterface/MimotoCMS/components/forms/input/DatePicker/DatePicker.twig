{% set sDatePickerId = Mimoto.meta('type')~"."~Mimoto.meta('id') %}
{% set sFlatDatePickerId = Mimoto.meta('type')~Mimoto.meta('id') %}
{% set sPHPDateFormat = 'F jS, Y / H:i' %}
{% set sFRDateFormat = 'F J, Y / H:i' %}

{% embed "MimotoCMS/components/forms/FormComponent.twig" with {"type": "datepicker" } %}
    {% block form_component_element %}

        <div class="MimotoCMS_forms_input_DatePicker">
            <div>settings opgeven als listoption (bijv. jaar, of volledige datum, of incl tijd)</div>
            <div>button die popup opent</div>

            <p>input wordt "hidden"</p>
            <input {{ Mimoto.input() }} type="text" class="MimotoCMS_forms_input_DatePicker-input js-{{ sFlatDatePickerId }}-date-picker-input" value="{{ date(Mimoto.value())|date(sPHPDateFormat) }}" data-dp-value="{{ Mimoto.value() }}" data-dp-format="{{ sFRDateFormat }}"/>
        </div>
        <script>Mimoto.Aimless.utils.registerRequest(Mimoto.form.setupDatePicker, '{{ sDatePickerId }}', '{{ sFlatDatePickerId }}', '{{ Mimoto.fieldId() }}');</script>
    {% endblock %}
{% endembed %}
