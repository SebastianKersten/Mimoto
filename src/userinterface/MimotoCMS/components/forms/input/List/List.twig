{% embed "MimotoCMS/components/forms/FormComponent.twig" with {"type": "list", button:true, buttonLabel:'Add', buttonIcon:'plus', buttonOnClick:"MimotoCMS.formFieldListItemAdd('"~Mimoto.meta('type')~"', '"~Mimoto.meta('id')~"', '"~Mimoto.fieldId()~"')", target:'page' } %}

    {% block form_component %}

        {# showOnEmpty / hideOmEmtpy on empty collection #}

        <ul class="MimotoCMS_forms_input_List js-list js-list-sortable" data-mimoto-list-id="{{ Mimoto.meta('type')~'.'~Mimoto.meta('id') }}"  data-mimoto-collection="{{ Mimoto.fieldId() }}" data-mimoto-component="_Mimoto_form_input_list-item">

            {{ Mimoto.value(true, '_Mimoto_form_input_list-item', null) }}

            {#
                // 1. mapping in settings
                // 2. type: { 'componentVar1':'entityVar1', 'componentVar2':'entityVar2' } general key/value pair
            #}

        </ul>

        <input type="hidden" data-mimoto-input-type="list" {{ Mimoto.input() }} value='{{ Mimoto.value() }}' />

    {% endblock %}

{% endembed %}
