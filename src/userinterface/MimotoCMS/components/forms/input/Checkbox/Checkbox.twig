{% embed "MimotoCMS/components/forms/form_component.twig" with {"type": "checkbox"} %}
    {% block form_component_element %}
        <div class="form-component-element-container">
            <div class="MimotoCMS_forms_input_Checkbox-container">
                {% set sInputId = Aimless.meta('type')~'.'~Aimless.meta('id') %}
                <input {{ Aimless.input()|raw }} id="{{ sInputId }}" type="checkbox" class="MimotoCMS_forms_input_Checkbox" {% if Aimless.value() %}checked{% endif %} />
                <svg class="MimotoCMS_forms_input_Checkbox-icon"><use xlink:href="#ico-checkmark"></use></svg>
            </div>
            <label for="{{ sInputId }}" class="form-component-element-label">{{ Aimless.data('option') }}</label>
        </div>
    {% endblock %}
{% endembed %}
