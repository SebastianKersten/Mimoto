{% embed "MimotoCMS/components/forms/FormComponent.twig" %}

    {% block form_component_element %}

        <div class="MimotoCMS_forms_input_Dropdown-container">
            <select {{ Aimless.input()|raw }} class="MimotoCMS_forms_input_Dropdown">
                <option value=""></option> {# check if field is optional, if selection made, disable this null-option #}
                {% set aOptions = Aimless.fieldOptions() %}
                {% for option in aOptions %}
                    <option value="{{ option.key }}" {% if Aimless.value() == option.key %}selected{% endif %}>{{ option.value }}</option>
                {% endfor %}
            </select>
            <svg class="MimotoCMS_forms_input_Dropdown-icon"><use xlink:href="#ico-arrow"></use></svg>
        </div>

    {% endblock %}

{% endembed %}
