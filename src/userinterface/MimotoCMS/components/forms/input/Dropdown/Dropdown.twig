{% embed "MimotoCMS/components/forms/FormComponent.twig" with {"type": "dropdown"} %}

    {% block form_component_element %}

        <div class="MimotoCMS_forms_input_Dropdown-container">
            <select data-mimotocms-dropdown {{ Mimoto.input() }} class="MimotoCMS_forms_input_Dropdown">
                <option value=""></option> {# check if field is optional, if selection made, disable this null-option #}
                {{ Mimoto.data('options', '_Mimoto_form_input_dropdown--option', { customValues: { value: Mimoto.value() }}) }}
            </select>
            <svg class="MimotoCMS_forms_input_Dropdown-icon"><use xlink:href="#ico-arrow"></use></svg>
        </div>

    {% endblock %}

{% endembed %}
