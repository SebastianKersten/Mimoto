<div {{ Aimless.field()|raw }} class="form-component">

  <label for="" class="form-component-title">{{ Aimless.data('label') }} <span class="form-component-title-information">(optioneel)</span></label>

  <div class="form-component-content{% if not Aimless.data('description')|default('') %} form-component-content--no-description{% endif %}">

    <div class="form-component-element js-error-parent">

      {% block form_component_element %}{% endblock %}

      <p {{ Aimless.error()|raw }} class="form-component-element-error">De tekst bevat ongeldige tekens, alleen cijfers en letters zijn toegestaan.</p>

    </div>

    {% if Aimless.data('description')|default('') %}
      <p class="form-component-description">{{ Aimless.data('description') }}</p>
    {% endif %}

  </div>
</div>
