<div class="MimotoCMS_pages_layouts_LayoutDetail-LayoutContainer" {{ Mimoto.realtime() }}>

    <div class="MimotoCMS_pages_layouts_LayoutDetail-LayoutContainer__data">
        <div class="MimotoCMS_pages_layouts_LayoutDetail-LayoutContainer__name">
            <div {{ Mimoto.realtime('name') }} >{{ Mimoto.render('name') }}</div>
        </div>
    </div>
    <div class="MimotoCMS_pages_layouts_LayoutDetail-LayoutContainer__menu">
        {{ Mimoto.module('Mimoto.CMS.ButtonModule', { label:'Edit', types:['small', 'secondary'], onclick:"Mimoto.CMS.layoutContainerEdit('" ~ Mimoto.meta('id') ~ "');" }) }}
        {{ Mimoto.module('Mimoto.CMS.ButtonModule', { label:'Delete', types:['small', 'alert'], onclick:"Mimoto.CMS.layoutContainerDelete('" ~ Mimoto.meta('id') ~ "');" }) }}
    </div>
</div>
