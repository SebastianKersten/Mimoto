<div class="MimotoCMS_services_ServiceOverview_Service" {{ Mimoto.realtime() }}>

    <div class="MimotoCMS_services_ServiceOverview_Service-info">
        <div class="MimotoCMS_services_ServiceOverview_Service-name" {{ Mimoto.realtime('name') }}>{{ Mimoto.data('name') }}</div>
        <div class="MimotoCMS_services_ServiceOverview_Service-file" {{ Mimoto.realtime('file') }}>{{ Mimoto.data('file') }}</div>
        <div class="MimotoCMS_services_ServiceOverview_Service-functions-empty {{ Mimoto.init() }}" {{ Mimoto.showWhenEmpty('functions') }}>No functions added yet</div>
        <div class="MimotoCMS_services_ServiceOverview_Service-functions {{ Mimoto.init() }}" {{ Mimoto.hideWhenEmpty('functions') }} {{ Mimoto.sortable() }} {{ Mimoto.realtime('functions', 'MimotoCMS_services_ServiceOverview_ServiceFunction') }}>{{ Mimoto.data('functions', 'MimotoCMS_services_ServiceOverview_ServiceFunction') }}</div>

        {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Add function', directive:Mimoto.add('functions', '_Mimoto_service_function'), types:['small'], icon:'' }) }}
    </div>

    <div class="MimotoCMS_services_ServiceOverview_Service-menu">
        {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Remove', directive:Mimoto.remove({confirm:'MimotoCMS.confirmRemoval'}), types:['secondary', 'alert'], icon:'' }) }}
        {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Edit', directive:Mimoto.edit('_Mimoto_service'), types:['secondary'], icon:'' }) }}
        <div class="MimotoCMS_modules_ListItem-sorthandlecontainer">{{ Mimoto.module('MimotoCMS_modules_SortHandle') }}</div>
    </div>
</div>
