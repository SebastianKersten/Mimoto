<div class="MimotoCMS_users_overview_UserPreview" {{ Mimoto.realtime() }}>

    <div class="MimotoCMS_users_overview_UserPreview-info">
        <div class="MimotoCMS_users_overview_UserPreview-avatar {{ Mimoto.init() }}" {{ Mimoto.hideWhenEmpty('avatar') }}>
            <img class="MimotoCMS_users_overview_UserPreview-avatar" src="{{ Mimoto.data('avatar') }}">
        </div>
        <div class="MimotoCMS_users_overview_UserPreview-details">
            <div class="MimotoCMS_users_overview_UserPreview-name">
                <span {{ Mimoto.realtime('firstName') }}>{{ Mimoto.data('firstName') }}</span>
                <span {{ Mimoto.realtime('lastName') }}>{{ Mimoto.data('lastName') }}</span>
            </div>
            <div class="MimotoCMS_users_overview_UserPreview-email" {{ Mimoto.realtime('email') }}>{{ Mimoto.data('email') }}</div>
        </div>
    </div>

    <div class="MimotoCMS_users_overview_UserPreview-menu">

        <div class="MimotoCMS_modules_ListItem-sorthandlecontainer">{{ Mimoto.module('MimotoCMS_modules_SortHandle') }}</div>

        {{ Mimoto.module('MimotoCMS_modules_Button', { label:'View', link:'/mimoto.cms/user/' ~ Mimoto.meta('id') ~ '/view', types:['secondary', 'small'], icon:'' }) }}
        {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Delete', directive:Mimoto.remove({confirm:'MimotoCMS.confirmRemoval'}), types:['alert', 'small'], icon:'' }) }}

    </div>
</div>
