<div class="MimotoCMS_pages_selections_SelectionDetail-Rule" {{ Mimoto.realtime() }}>

    <div class="MimotoCMS_pages_selections_SelectionDetail-Rule__data">
        <div class="MimotoCMS_pages_selections_SelectionDetail-Rule__name">
            <div {{ Mimoto.realtime('type.name') }} >{{ Mimoto.data('type.name') }}</div>


            {{ Mimoto.module('Mimoto.CMS.ButtonModule', { label:'type -> select entity', types:['small', 'secondary'], onclick:"MimotoX.data.selectAndAdd('" ~ Mimoto.meta('type') ~ "." ~ Mimoto.meta('id') ~ ".type', 'allEntityTypes');" }) }}

            <div>id (optional)</div>
            <div>parentProperty (only show when type is set) -> select available properties - entity or collection</div>
            <div>propertyValues (array met property selection & value input)</div>

        </div>
    </div>
    <div class="MimotoCMS_pages_selections_SelectionDetail-Rule__menu">
        {{ Mimoto.module('Mimoto.CMS.ButtonModule', { label:'Edit', types:['small', 'secondary'], onclick:"Mimoto.CMS.selectionRuleEdit('" ~ Mimoto.meta('id') ~ "');" }) }}
        {{ Mimoto.module('Mimoto.CMS.ButtonModule', { label:'Delete', types:['small', 'alert'], onclick:"Mimoto.CMS.selectionRuleDelete('" ~ Mimoto.meta('id') ~ "');" }) }}
    </div>
</div>
