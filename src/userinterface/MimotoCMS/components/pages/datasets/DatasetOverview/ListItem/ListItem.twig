{% if Mimoto.data('form') is not empty %}
    {% set sFormInfo = Mimoto.data('form.name') %}
{% else %}
    {% set sFormInfo = 'No form selected yet' %}
{% endif %}
{{
    Mimoto.module('MimotoCMS_modules_ListItem',
    {
        realtime: Mimoto.realtime(),
        label: Mimoto.data('name'),
        label_realtime: Mimoto.realtime('name'),
        sublabel: 'form = '~sFormInfo,
        sublabel_realtime:  null,
        button_label: 'View',
        button_link: '/mimoto.cms/dataset/' ~ Mimoto.meta('id') ~ '/view',
        button_type: 'secondary',
        button2_label: 'Delete',
        button2_directive: Mimoto.remove(),
        button2_type: 'alert'
    })
}}
