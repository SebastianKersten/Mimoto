                    <div>{{ Mimoto.module('Mimoto.CMS.ButtonModule', { label:'Add new component', icon:'plus', onclick:"Mimoto.CMS.entityComponentNew('" ~ Mimoto.meta('id') ~ "');" }) }}</div>
