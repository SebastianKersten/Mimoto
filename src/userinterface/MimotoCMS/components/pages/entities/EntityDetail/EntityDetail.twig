{% embed "MimotoCMS/modules/Tabmenu/Tabmenu.twig" %}

    {% block tabs %}

        <div data-mimotocms-tabmenu-tab>Structure</div>
        <div data-mimotocms-tabmenu-tab>Instances</div>
        <div data-mimotocms-tabmenu-tab>More</div>

    {% endblock %}

    {% block panels %}

        <div data-mimotocms-tabmenu-panel>

            <div class="MimotoCMS_pages_entities_EntityDetail_Structure">

                <div class="MimotoCMS_pages_entities_EntityDetail_Structure__meta">

                    <div class="MimotoCMS_pages_entities_EntityDetail_Structure__meta_info">

                        <span class="MimotoCMS_pages_entities_EntityDetail_Structure__entityname" {{ Mimoto.realtime('name') }}>{{ Mimoto.data('name') }}</span>

                        {% if entityStructure.extends is not empty %}
                            {% for extension in entityStructure.extends %}
                                extends <b><a href="/mimoto.cms/entity/{{ extension.id }}/view"><span data-mimoto-id="entity.{{ extension.id }}.name" class="MimotoCMS_pages_entities_EntityDetail_Structure__entityname">{{ extension.name }}</span></a></b>
                            {% endfor %}
                            <br>
                        {% endif %}

                        {% if entityStructure.extendedBy is not empty %}
                            <div class="MimotoCMS_pages_entities_EntityDetail_Structure__extendedby">
                                Extended by:
                                {% for extension in entityStructure.extendedBy %}
                                <a href="/mimoto.cms/entity/{{ extension.id }}/view"><span data-mimoto-value="_MimotoAimless__core__entity.{{ extension.id }}.name">{{ extension.name }}</span></a>{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}

                        <div class="MimotoCMS_pages_entities_EntityDetail_Structure__usage">
                            {% if entityStructure.hasTable %}
                                This entity has {{ entityStructure.instanceCount }} instance{% if entityStructure.instanceCount != 1 %}s{%  endif %}
                            {% else %}
                                This entity has no table of its own and is only used for extension purposes
                            {% endif %}
                        </div>

                    </div>

                    <div class="MimotoCMS_pages_entities_EntityDetail_Structure__meta_menu">
                        {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Edit', icon:'', directive:Mimoto.edit('_Mimoto_coreform__entity'), types:['secondary'] }) }}
                    </div>

                </div>


                <div class="MimotoCMS_pages_entities_EntityDetail__block">

                    <div class="MimotoCMS_pages_entities_EntityDetail_Structure__properties_empty {{ Mimoto.init() }}" {{ Mimoto.showWhenEmpty('properties') }}>
                        <div>This entity has no properties yet.<br>Go ahead, start adding them!</div>
                    </div>

                    <div class="{{ Mimoto.init() }}" {{ Mimoto.hideWhenEmpty('properties') }}>
                        <ul class="MimotoCMS_pages_entities_EntityDetail_container js-list js-list-sortable" {{ Mimoto.realtime('properties', 'MimotoCMS_entities_EntityDetail-EntityProperty') }}>
                            {{ Mimoto.data('properties', 'MimotoCMS_entities_EntityDetail-EntityProperty') }}
                        </ul>
                    </div>

                    <div class="MimotoCMS_pages_entities_EntityDetail_Structure__properties_menu">
                        {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Add new property', icon:'plus', directive:Mimoto.add('properties', '_Mimoto_coreform__entityProperty') }) }}
                    </div>

                </div>

            </div>
        </div>

        <div data-mimotocms-tabmenu-panel class="{{ Mimoto.init() }}">

            <b><i>Currently in beta and very raw (no primary labels or realtime updates yet)</i></b><br>
            <br>

            <div class="MimotoCMS_pages_entities_EntityDetail_Structure__usage">
                {% if entityStructure.hasTable %}
                    This entity has {{ entityStructure.instanceCount }} instance{% if entityStructure.instanceCount != 1 %}s{%  endif %}
                {% else %}
                    This entity has no table of its own and is only used for extension purposes
                {% endif %}
            </div>

            <br>

            <div class="MimotoCMS_pages_entities_EntityDetail_Instances">
                <div class="MimotoCMS_pages_entities_EntityDetail_Instances__container">
                    Temporarily disabled ..
                    {#{{ Mimoto.selection('instances', 'MimotoCMS_entities_EntityDetail_EntityInstance') }}#}
                </div>
            </div>

            <br>
            <a href="javascript:MimotoCMS.instanceDeleteAll('{{ Mimoto.data('name') }}');">Delete all</a> instances of entity type `{{ Mimoto.data('name') }}`
        </div>

        <!-- more -->

        <div data-mimotocms-tabmenu-panel class="{{ Mimoto.init() }}">

            <b>Danger zone!</b><br>
            <br>
            <i><u>WARNING</u> - Deleting the entity will result in the LOSS OF ALL DATA related to this entity.</i><br>
            <br>
            {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Delete entity', icon:'warning', directive:Mimoto.remove(), onclick:"window.open('/mimoto.cms/entities', '_self');", types:['alert'] }) }}
        </div>

    {% endblock %}
{% endembed %}


{% embed "MimotoCMS/modules/Tabmenu/Tabmenu.twig" %}

    {% block tabs %}

        <div data-mimotocms-tabmenu-tab>Forms</div>

    {% endblock %}

    {% block panels %}

        <div data-mimotocms-tabmenu-panel>

            <div class="MimotoCMS_pages_entities_EntityDetail__block">

                <div class="MimotoCMS_pages_entities_EntityDetail_Structure__properties_empty" {{ Mimoto.showWhenEmpty('forms') }}>
                    This entity has no form yet.<br>Go ahead, start adding one!
                </div>

                <div {{ Mimoto.hideWhenEmpty('forms') }}>
                    <ul class="MimotoCMS_pages_entities_EntityDetail_container js-list js-list-sortable" {{ Mimoto.realtime('forms', 'MimotoCMS_entities_EntityDetail-Form') }}>
                        {{ Mimoto.data('forms', 'MimotoCMS_entities_EntityDetail-Form') }}
                    </ul>
                </div>

                <div class="MimotoCMS_pages_entities_EntityDetail_Structure__properties_menu">
                    {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Auto-generate form', icon:'plus', directive:Mimoto.api('/mimoto.cms/entity/' ~ Mimoto.meta('id') ~ '/form/autogenerate') }) }}
                    {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Add new form', icon:'plus', directive:Mimoto.add('forms', '_Mimoto_coreform__form') }) }}
                    </div>

            </div>

        </div>

    {% endblock %}
{% endembed %}


{% embed "MimotoCMS/modules/Tabmenu/Tabmenu.twig" %}

    {% block tabs %}

        <div data-mimotocms-tabmenu-tab>Components</div>

    {% endblock %}

    {% block panels %}

        <div data-mimotocms-tabmenu-panel>

            <div class="MimotoCMS_pages_entities_EntityDetail__block">

                <div class="MimotoCMS_pages_entities_EntityDetail_Structure__properties_empty" {{ Mimoto.showWhenEmpty('components') }}>
                    <div>This entity has no component yet.<br>Go ahead, start adding one!</div>
                </div>

                <div {{ Mimoto.hideWhenEmpty('components') }}>
                    <ul class="MimotoCMS_pages_entities_EntityDetail_container js-list js-list-sortable" {{ Mimoto.realtime('components', 'MimotoCMS_entities_EntityDetail-ComponentListItem') }}>
                        {{ Mimoto.data('components', 'MimotoCMS_entities_EntityDetail-ComponentListItem') }}
                    </ul>
                </div>

                <div class="MimotoCMS_pages_entities_EntityDetail_Structure__properties_menu">
                    {{ Mimoto.module('MimotoCMS_modules_Button', { label:'Add new component', icon:'plus', onclick:"MimotoCMS.entityComponentNew('" ~ Mimoto.meta('id') ~ "');" }) }}
                </div>

            </div>

            <br>

            <div class="MimotoCMS_pages_entities_EntityDetail__codeexample">

                <div class="MimotoCMS_pages_entities_EntityDetail__codeexample-title">Twig example</div>

                <div class="MimotoCMS_pages_entities_EntityDetail__codeexample-container">
                    {{ "<div "|escape }}<span class="MimotoCMS_pages_entities_EntityDetail-EntityPropertyExample-aimless-code">{{ '{{ Mimoto.realtime() }}' }}</span>&gt
                    <div class="MimotoCMS_pages_entities_EntityDetail__codeexample-properties" {{ Mimoto.realtime('properties', 'MimotoCMS_entities_EntityDetail_EntityPropertyExample') }}>
                        {{ Mimoto.data('properties', 'MimotoCMS_entities_EntityDetail_EntityPropertyExample') }}
                    </div>
                    {{ "</div>"|escape }}
                </div>
            </div>

        </div>

    {% endblock %}
{% endembed %}
