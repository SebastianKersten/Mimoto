                        {{ Mimoto.data('forms', 'Mimoto.CMS_entities_EntityDetail-Form') }}
                    </ul>

                    <div class="MimotoCMS_pages_entities_EntityDetail_Structure__properties_menu">
                        {{ Mimoto.module('Mimoto.CMS.ButtonModule', { label:'Auto-generate form', icon:'plus', onclick:"Mimoto.CMS.entityFormAutogenerate('" ~ Mimoto.meta('id') ~ "');" }) }}
                        {{ Mimoto.module('Mimoto.CMS.ButtonModule', { label:'Add new form', icon:'plus', onclick:"Mimoto.CMS.entityFormNew('" ~ Mimoto.meta('id') ~ "');" }) }}
