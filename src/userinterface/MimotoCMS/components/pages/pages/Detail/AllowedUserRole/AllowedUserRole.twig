<div class="MimotoCMS_pages_pages_Detail_AllowedUserRole js-sortable-draghandle" {{ Mimoto.realtime() }}>

    {# check if the user role is a core feature #}
    {% if ('_Mimoto_user_role-' in Mimoto.meta('id')) %}
        <span {{ Mimoto.realtime('name') }}>{{ Mimoto.render('name') }}</span>
    {% else %}
        <a href="/mimoto.cms/configuration/userrole/{{ Mimoto.meta('id') }}/view" {{ Mimoto.realtime('name') }}>{{ Mimoto.render('name') }}</a>
    {% endif %}
</div>
