<div class="subproject_phase">
    
    <div class="subproject_title">{{ phase }}</div>
    
    <div class="subproject_container">
        <div class="subproject_name subproject_header">Onderdeel</div>
        <div class="subproject_status subproject_header">Status</div>
        <div class="subproject_budget subproject_header">Budget</div>
        <div class="subproject_chanceofsuccess subproject_header">Slagingskans</div>
        <div class="subproject_edit subproject_header">&nbsp;</div>
    </div>
    
    {% for subproject in subprojects %}
        <div class="subproject">
            <div class="subproject_container">
                <div class="subproject_name subproject_content">{{ subproject.name }}</div>
                <div class="subproject_status subproject_content" mls_value="subprojectstate.{{ subproject.getStateId }}.name, subproject.{{ subproject.getId }}.getStateName">{{ subproject.getStateName }}</div>
                <div class="subproject_budget subproject_content" mls_value="subproject.{{ subproject.getId }}.getBudget">{{ subproject.getBudget/1000 }}k</div>
                <div class="subproject_chanceofsuccess subproject_content" mls_value="subproject.{{ subproject.getId }}.getProbability">{{ subproject.getProbability*100 }}%</div>
                <div class="subproject_edit subproject_content"><div class="button_small" onClick="Maido.data.changeEntity('subproject', {{ subproject.getId }});">Edit</div></div>
            </div>
            <div class="subproject_details">
                conversatie (laatste notitie) | budgetten | periode<br>
                Contactpersoon: <span mls_value="subproject.{{ subproject.getId }}.contactName">{{ subproject.getContactName }}</span><br>
                <div class="button_small" onClick="Maido.subscribeTo('subproject.'{{ subproject.getId }});">Follow</div>
            </div>
        </div>
    {% endfor %}
    
</div>