<div class="popup_title">{% if formdata.id is defined %}Change{% else %}New{% endif %} subproject</div>
<div class="form">
    <div class="form_field_name">Subproject name</div>
    <div class="form_field"><input id="form_field_name" name="name" type="text" class="textfield" value="{% if formdata.name is defined %}{{ formdata.name }}{% endif %}" /></div>
    <div class="form_field_name">Main contact</div>
    <div class="form_field"><input id="form_field_contact_name" name="contact_name" type="text" class="textfield" value="{% if formdata.contact_name is defined %}{{ formdata.contact_name }}{% endif %}" /></div>
    
    <div class="form_field_name">Probability</div>
    <div class="form_field">
        <select id="form_field_probability_id" name="probability_id">
            {% if probability_id is empty %}<option value="0" selected>Select a probability ..</option>{% endif %}
            {% for probability in probabilities %}
                <option value="{{ probability.id }}" {% if probability.id == formdata.probability_id %}selected{% endif %}>{{ probability.label }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form_field_name">Offer type</div>
    <div class="form_field">
        <select id="form_field_offer_type_id" name="project_type_id">
            {% if payment_type_id is empty %}<option value="0" selected>Select an offer type ..</option>{% endif %}
            {% for payment_type in payment_types %}
                <option value="{{ payment_type.id }}" {% if payment_type.id == formdata.payment_type_id %}selected{% endif %}>{{ payment_type.label }}</option>
            {% endfor %}
        </select>
    </div>
        
    <div class="form_menu">
        <div class="button_text" onClick="Maido.popup.close();">Cancel</div>
        <div class="button" onClick="Maido.saveSubproject({ {% if formdata.id is defined %}id:{{ formdata.id }},{% endif %} name:document.getElementById('form_field_name').value, description:document.getElementById('form_field_description').value, client_id:document.getElementById('form_field_client_id').value, agency_id:document.getElementById('form_field_agency_id').value, projectmanager_id:document.getElementById('form_field_projectmanager_id').value } );">Save</div>
    </div>
</div>